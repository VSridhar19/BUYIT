<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent">

    <ImageView
        android:id="@+id/i2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/t02"
        android:layout_toStartOf="@+id/t02" />

<TextView
    android:id="@+id/t02"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="36dp"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="15dp"
    android:text="hi"
    android:textSize="30dp" />

    <Button
        android:id="@+id/b10"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/b11"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:background="?android:attr/colorPressedHighlight"
        android:drawableLeft="@drawable/ic_stat_name"
        android:onClick="delete"
        android:text="Delete from cart"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <Button
        android:id="@+id/b11"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/i2"
        android:layout_alignRight="@+id/i2"
        android:layout_below="@+id/i2"
        android:layout_marginTop="90dp"
        android:background="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/ic_stat_name1"
        android:onClick="buys"
        android:text="BUY NOW" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/t03"
        android:layout_width="1500dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="hLOOOO"
        android:textSize="30dp"
        tools:ignore="DuplicateIds" />
    </ScrollView>
</RelativeLayout>
</android.support.v7.widget.CardView>