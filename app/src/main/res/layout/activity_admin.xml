<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sridhar.buyit.Admin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Admin Page"
            android:textAlignment="center"
            android:textColor="#ff0"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/names1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_stat_name11"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Name fo the product"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/darker_gray" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db" />

        <EditText
            android:id="@+id/prices1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_stat_name101"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Price"
            android:inputType="number"
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="48dp"
            android:padding="16dp"
            android:id="@+id/ig1"
            android:src="@drawable/cycled" />
    <Button
        android:id="@+id/b14"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:onClick="choose"
        android:padding="16dp"
        android:text="choose image"
        android:textAllCaps="false"
        android:textColor="#f16f7d"
        android:textSize="30dp"
        tools:ignore="OnClick" />
        <Button
            android:id="@+id/b15"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:onClick="Adds"
            android:padding="16dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#f16f7d"
            android:textSize="30dp"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/b16"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:onClick="list"
            android:padding="16dp"
            android:text="list"
            android:textAllCaps="false"
            android:textColor="#f16f7d"
            android:textSize="30dp"
            tools:ignore="OnClick" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>



